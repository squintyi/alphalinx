<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= partner.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/partners/<%= partner._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="partner[name]" value="<%= partner.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="partner[image]" value="<%= partner.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="partner[description]" value="<%= partner.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="portal-link" href="/partners">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

