<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To AlphaLinx</h1>
             <p>Join our platform today!</p>
             <p>
                <a class="btn btn-primary btn-large" href="/partners/new">Add Your Business</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% partners.forEach(function(partner){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= partner.image %>">
                   <div class="caption">
                       <h4><%= partner.name %></h4>
                   </div>
                   <p>
                       <a href="/partners/<%= partner._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
